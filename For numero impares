package reforco;

import javax.swing.JOptionPane;

public class Reforco {

    public static void main(String[] args) {
        
        int numero = 0;
        int contador = 0;
        
        for(int i = 0; i < 5; i++){
            numero = Integer.parseInt(JOptionPane.showInputDialog("Informe o numero: "));
            if(numero % 2 != 0)
                contador ++;
            
              
        }
        
        JOptionPane.showMessageDialog(null, "Ha " + contador + " numero impares");
       

    }

}
